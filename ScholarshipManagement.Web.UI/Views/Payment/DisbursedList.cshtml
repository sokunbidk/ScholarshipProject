@model IList<ScholarshipManagement.Data.DTOs.PaymentDto>
@{
    ViewData["Title"] = "Scholarship Disbursement";
    int count = 0;
}
<h1>Scholarship Disbursement</h1>
<div>
    <a class="text-danger  text-lg-right font-weight-bold" asp-controller="Payment" asp-action="PaymentDashboard">---Dashboard</a>

    <div class="card-body">
        @if (Model.Count() == 0)
        {
            <div>
                <h5 class="text-center text-danger">No Approved Payment!</h5>
            </div>
        }
        else
        {
            <table class="table  table-responsive-sm table-bordered">
                <thead class="table-title">
                    <tr class="text-white">
                        <th>S/N</th>
                        <th>Ref</th>
                        <th>Names</th>
                        <th>Name Of School</th>
                        <th>Academic Level</th>
                        <th>Session</th>
                        <th>Jamaat</th>
                        <th>Circuit</th>
                        <th>Status</th>
                        <th>Amount Approved</th>
                        <th>Bank</th>
                        <th>DatePaid</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var PaymentDto in Model)
                    {
                    <tr>
                        <td> @(++count) </td>
                        <td>@PaymentDto.ApplicationId </td>
                        <td>@PaymentDto.Names </td>
                        <td> @PaymentDto.NameOfSchool </td>
                        <td>@PaymentDto.AcademicLevel </td>
                        <td> @PaymentDto.SchoolSession </td>
                        <td>@PaymentDto.Jamaat </td>
                        <td> @PaymentDto.Circuit </td>
                        <td>
                            <input type="text" asp-for="@PaymentDto.Status" class="form-control btn btn-primary " />
                        </td>
                        <td>@PaymentDto.AmountApproved </td>
                        <td>@PaymentDto.BankAccountName</td>
                        <td>@PaymentDto.DatePaid</td>




                    </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>

