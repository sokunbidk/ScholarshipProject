@model ScholarshipManagement.Data.CreateUserRequestModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="row justify-content-center">

    <div class="col-md-7 mt-5">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center ">@ViewData["Title"]</h4>
            </div>



            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
                }
                <form method="POST">

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="MemberCode"></label>
                            <input class="form-control" type="text" asp-for="MemberCode" />
                            <span asp-validation-for="MemberCode"></span>
                        </div>
                    </div>



                    <div class="form-row">
                        <div class="form-group  col-lg-6">
                            <label asp-for="Password"></label>
                            <input class="form-control" type="password" asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label asp-for="ConfirmPassword"></label>
                            <input class="form-control" type="password" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>

                    </div>

                    <div class="form-row justify-content-center">
                        <input type="submit" class="btn btn-success" value="Submit" />
                    </div>

                </form>
            </div>
            <div class="card-footer">
                Already have an account? <a asp-controller="User" asp-action="Login">Sign In</a>
            </div>
        </div>
    </div>

</div>
