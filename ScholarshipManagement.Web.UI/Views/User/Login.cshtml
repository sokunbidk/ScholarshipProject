@model ScholarshipManagement.Data.LoginUserRequestModel

@{
    ViewData["Title"] = "LogIn";
}

<div class="row justify-content-center">
   
        <div class="form-row">
            <div class="card shadow">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>

                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
                    }
                    <form method="post" class="p-2">
                        <div class="form-row">
                            <div class="form-group row">
                                <label class="formlabel col col-5 font-weight-bold" asp-for="Email"></label>
                                <input type="email" asp-for="Email" class="form-control col col-7 font-weight-normal" placeholder="Email Address" />
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="formlabel col col-5 font-weight-bold" asp-for="Password"></label>
                            <input type="password" id="password" required asp-for="Password" class="form-control col col-7 font-weight-normal"  placeholder="Password" />
                            <span asp-validation-for="Password"></span>
                         
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-success" value="Sign In" />
                        </div>
                    </form>
                </div>

                <div class="card-footer formlabel">
                    New User? <a asp-controller="User" asp-action="Create">Sign Up</a>
                </div>
            </div>
        </div>
   
    
    

</div>


