@model ScholarshipManagement.Data.LoginUserRequestModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">

    <div class="card shadow">
        <div class="card-header">
            <h4>@ViewData["Title"]</h4>
        </div>

        <div class="card-body">
            @ViewBag.CreateError
            <form method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email Address" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Sign In" />
                </div>
            </form>
        </div>

        <div class="card-footer">
            New User? <a asp-controller="User" asp-action="Create">Sign Up</a>
        </div>
    </div>

</div>


