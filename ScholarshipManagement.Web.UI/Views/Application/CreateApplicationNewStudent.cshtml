@model ScholarshipManagement.Data.CreateApplicationRequestModel
@{
    ViewData["Title"] = "New Application";
}

<div class="row justify-content-center mt-5">

    <div class="col-md-7">
        <div class="card formcard">
            <div class="card-header">
                <h4 class="text-center">@ViewData["Title"]</h4>
            </div>
            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="alert alert-warning alert-dismissible bg-danger text-white text-center" id="successUser" role="alert">@ViewBag.Message</p>
                }
                @*<a class="text-primary  text-lg-right font-weight-bold" asp-controller="Student" asp-action="NewCandidate">---_Back</a>*@
                @*<a class="text-primary  text-lg-right font-weight-bold" asp-controller="User" asp-action="Logout">---LogOut</a>*@

            <form method="POST" enctype="multipart/form-data">

                <div class=" form-row">
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="InstitutionType"></label>
                        <select asp-for="InstitutionType" required class="form-control">
                            <option value="1">University</option>
                            <option value="2">Polytechnic</option>
                            <option value="3">College</option>
                            <option value="4">Secondary</option>
                            <option value="5">Primary</option>
                            <option value="6">Artisan</option>
                        </select>
                        <span asp-validation-for="InstitutionType"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="formlabel" asp-for="NameOfSchool"></label>
                        <input type="text" required asp-for="NameOfSchool" class="form-control" />
                        <span asp-validation-for="NameOfSchool"></span>
                    </div>

                    <div class="form-group col-lg-2">
                        <label class="formlabel" asp-for="AcademicLevel">Level</label>
                        <input type="text" required asp-for="AcademicLevel" class="form-control" />
                        <span asp-validation-for="AcademicLevel"></span>
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="SchoolSession"></label>
                        <input class="form-control" required type="text" asp-for="SchoolSession" />
                        <span asp-validation-for="SchoolSession"></span>
                    </div>

                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="Discipline"></label>
                        <input class="form-control" required type="text" asp-for="Discipline" />
                        <span asp-validation-for="Discipline"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="Duration"></label>
                        <input class="form-control" required type="text" asp-for="Duration" />
                        <span asp-validation-for="Duration"></span>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="DegreeInView"></label>
                        <input class="form-control" required type="text" asp-for="DegreeInView" />
                        <span asp-validation-for="DegreeInView"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="DateAdmitted"></label>
                        <input class="form-control" required type="date" asp-for="DateAdmitted" />
                        <span asp-validation-for="DateAdmitted"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="YearToGraduate"></label>
                        <input class="form-control" required type="date" asp-for="YearToGraduate" />
                        <span asp-validation-for="YearToGraduate"></span>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="AmountRequested"></label>
                        <input class="form-control" required type="text" asp-for="AmountRequested" />
                        <span asp-validation-for="AmountRequested"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" for="letterOfAdmission">Admission Letter</label>
                        <input class="form-control" required type="file" id="letterOfAdmission" name="files" />
                        <span asp-validation-for="LetterOfAdmission"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" for="LastSchoolResult">Last Result(Old Student)</label>
                        <input class="form-control" required type="file" placeholder="Student above 100 level" id="LastSchoolResult" name="files" />
                        <span asp-validation-for="LastSchoolResult"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" for="schoolBill">School Bill</label>
                        <input class="form-control" required type="file" id="schoolBill" name="files" />
                        <span asp-validation-for="SchoolBill"></span>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="BankName"></label>
                        <input class="form-control" required type="text" asp-for="BankName" />
                        <span asp-validation-for="BankName"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="BankAccountNumber"></label>
                        <input class="form-control" required id="bankacct" onkeyup="checkLength(event)" type="text" asp-for="BankAccountNumber" maxlength="10" />
                        <span asp-validation-for="BankAccountNumber"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="formlabel" asp-for="BankAccountName"></label>
                        <input class="form-control" required type="text" asp-for="BankAccountName" />
                        <span asp-validation-for="BankAccountName"></span>
                    </div>
                </div>
                <a class="text-primary  text-lg-right font-weight-bold" asp-controller="Student" asp-action="DashboardReturningStudent">---Close</a>
                <input type="submit" class="btn btn-success" value="Submit" />
            </form>
            </div>
        </div>
    </div>

</div>
<script>
    function checkLength(event) {
        let bank = document.getElementById('bankacct');
        if (typeof bank.value != Number) {
            document.getElementById('err').innerHTML = "Bank account can't contain alphabets";
        }
        if (bank.value.length > 10) {
            document.getElementById('err').innerHTML = "Bank account can't be greater than 10";
            event.preventDefault();
        }

    }
</script>
