@model ScholarshipManagement.Data.CreateJamaatRequestModel

@{
    ViewData["Title"] = "Create a New Jamaat";
}

<div class="row">

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="alert alert-warning alert-dismissible" id="successUser" role="alert">@ViewBag.Message</p>
                }
                <form method="POST">

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CircuitId"></label>
                            <select asp-for="CircuitId" class="form-control" asp-items="ViewBag.Circuits">
                                <option selected>-- Select Circuit --</option>
                            </select>
                            <span asp-validation-for="CircuitId"></span>
                        </div>


                    </div>

                    <div class="form-row">

                        <input type="submit" class="btn btn-success" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
