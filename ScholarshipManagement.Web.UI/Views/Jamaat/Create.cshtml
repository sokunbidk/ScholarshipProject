@model ScholarshipManagement.Data.CreateJamaatRequestModel

@{
    ViewData["Title"] = "Create Jamaat";
}

<div class="row">

    <div class="col-md-7">
        <div class="card">
            <a class="text-danger  text-lg-right font-weight-bold" asp-controller="Admin" asp-action="AdminDashboard">---Dashboard</a>
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="alert alert-warning alert-dismissible bg-danger text-white text-center" id="successUser" role="alert">@ViewBag.Message</p>
                }
                <form method="POST">

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label class="formlabel" for="Nme">Jamaat Name</label>
                            <input type="text" asp-for="JamaatName" id="Nme" class="form-control" />
                            <span asp-validation-for="JamaatName"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" for="mail">Email Address</label>
                            <input type="text" asp-for="Email" id="mail" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label class="formlabel" for="Gsm">Phone Number</label>
                            <input type="text" asp-for="PhoneNumber" id="Gsm" class="form-control" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group">
                            <label class="formlabel" for="Crt">Assign Circuit</label>
                            <select asp-for="CircuitId" class="form-control" id="Crt" asp-items="ViewBag.Circuits">
                                <option selected>-- Select Circuit --</option>
                            </select>
                            <span asp-validation-for="CircuitId"></span>
                        </div>


                    </div>

                    <div class="form-row">

                        <input type="submit" class="btn btn-success" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
