@model IList<ScholarshipManagement.Data.DTOs.PendingApplicationsDto>
@{
    ViewData["Title"] = "Students Payment History";
    int count = 0;
}
<h2>Payments History</h2>
<div>
    <a class="text-danger  text-lg-right font-weight-bold" asp-controller="Student" asp-action="DashboardReturningStudent">---Dashboard</a>

    <div class="card-body">
        @if (Model.Count() == 0)
        {
            <div>
                <h5 class="text-center text-danger">No Application History!</h5>
            </div>
        }
        else
        {
            <table class="table  table-responsive-sm table-bordered">
                <thead class="table-title">
                    <tr class="text-white">
                        <th>S/N</th>
                        <th>Name</th>
                        <th>Name Of School</th>
                        <th>Academic Level</th>
                        <th>School Session</th>
                        <th>Status</th>
                        <th>Amount Granted</th>
                        <th>Date Paid</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var PendingApplicationsDto in Model)
                    {
                    <tr>
                        <td> @(++count) </td>
                        <td>@PendingApplicationsDto.Names </td>
                        <td> @PendingApplicationsDto.NameOfSchool </td>
                        <td>@PendingApplicationsDto.AcademicLevel </td>
                        <td> @PendingApplicationsDto.SchoolSession </td>
                        <td class="form-group col-1">
                            <div class="form-control bg-success text-white">@PendingApplicationsDto.Status</div>
                        </td>
                        <td>@PendingApplicationsDto.AmountGranted </td>
                        <td>@PendingApplicationsDto.DateDisbursed </td>



                    </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>

