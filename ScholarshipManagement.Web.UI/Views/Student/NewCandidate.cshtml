@model ScholarshipManagement.Data.CreateStudentRequestModel
@{
    ViewData["Title"] = "Student's Registration";
}

<div class="row justify-content-center mt-5">

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">@ViewData["Title"]</h4>
            </div>     
            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                <p class="alert alert-warning alert-dismissible text-white btn btn-danger bg-danger text-white text-center" id="successUser" role="alert">@ViewBag.Message</p>
                }
                <a class="text-primary  text-lg-right font-weight-bold" asp-controller="Student" asp-action="Dashboard">---Dashboard</a>               
                <form method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="SurName"></label>
                            <input type="text" required asp-for="SurName" class="form-control" />
                            <span asp-validation-for="SurName"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="FirstName"></label>
                            <input type="text" required asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="OtherName"></label>
                            <input class="form-control" type="text" asp-for="OtherName" />
                            <span asp-validation-for="OtherName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="formlabel" asp-for="Address"></label>
                        <input class="form-control" required type="text" asp-for="Address" />
                        <span asp-validation-for="Address"></span>
                    </div>

                    <div class="form-row">

                    </div>
                    <div class="form-row">

                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="AuxiliaryBody"></label>
                            <select asp-for="AuxiliaryBody" required class="form-control">
                                <option value="1">MajlisKhuddam</option>
                                <option value="2">Lajnah</option>
                                <option value="3">MajlisAnsarullah</option>
                                <option value="4">MajlisAtfal</option>
                                <option value="5">Nasrat</option>
                                <option value="6">NonMember</option>
                            </select>
                            <span asp-validation-for="AuxiliaryBody"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="Gender"></label>
                            <select asp-for="Gender" required class="form-control">
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                            <span asp-validation-for="Gender"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="DateOfBirth"></label>
                            <input class="form-control" required type="date" asp-for="DateOfBirth" />
                            <span asp-validation-for="DateOfBirth"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label class="formlabel" asp-for="GuardianFullName"></label>
                            <input class="form-control" required type="text" asp-for="GuardianFullName" />
                            <span asp-validation-for="GuardianFullName"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" for="GPhone">Guardian GSM</label>
                            <input class="form-control" required id="GPhone" type="text" asp-for="GuardianPhoneNumber" />
                            <span asp-validation-for="GuardianPhoneNumber"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" for="GCode">Guardian M.Code</label>
                            <input class="form-control" id="GCode" required type="text" asp-for="GuardianMemberCode" />
                            <span asp-validation-for="GuardianMemberCode"></span>
                        </div>

                    </div>
                        <div class="form-group col-lg-6">
                            <label class="formlabel" for="userphoto">Choose Photo</label>
                            <input class="form-control" required type="file" id="userphoto" name="files" />
                        </div>
                       

                    <input type="submit" class="btn btn-success" value="Submit" />
                   <a class="btn btn-success option" asp-controller="Application" asp-action="CreateApplicationNewStudent">--Next->></a>
                </form>
            </div>
        </div>
    </div>

</div>
