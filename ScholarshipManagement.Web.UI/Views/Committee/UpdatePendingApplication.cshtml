@model ScholarshipManagement.Data.DTOs.ApplicationDto
@{
    ViewData["Title"] = "Edit Application Details";
}

<div class="row justify-content-center mt-5">

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">@ViewData["Title"]</h4>
            </div>
            <div class="card card-body">
                <a class="text-primary  text-lg-right font-weight-bold" asp-controller="Committee" asp-action="PendingApplicationsFocus">---Dashboard</a>
                <a asp-action="UpdatePendingStudent" asp-route-id="@Model.StudentId" class="btn btn-success">
                    View Student Details
                </a>
                <label class="text-danger  text-lg-center font-weight-bold">You Can only Change These Data if You MUST !!</label>
                <form method="POST">
                    <div class="form-row">


                        <div class="form-group col-lg-4">
                            <label class="formlabel" for="NoS">Name Of School</label>
                            <input type="text" id="NoS" asp-for="NameOfSchool" class="form-control" />
                            <span asp-validation-for="NameOfSchool"></span>

                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="AcademicLevel">Academic Level</label>
                            <input type="text" asp-for="AcademicLevel" class="form-control" />
                            <span asp-validation-for="AcademicLevel"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class=" formlabel" asp-for="SchoolSession">School Session</label>
                            <input class="form-control" type="text" asp-for="SchoolSession" />
                            <span asp-validation-for="SchoolSession"></span>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="Discipline"></label>
                            <input class="form-control" type="text" asp-for="Discipline" />
                            <span asp-validation-for="Discipline"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="Duration"></label>
                            <input class="form-control" type="text" asp-for="Duration" />
                            <span asp-validation-for="Duration"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="DegreeInView"></label>
                            <input class="form-control" type="text" asp-for="DegreeInView" />
                            <span asp-validation-for="DegreeInView"></span>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="DateAdmitted">Date Admitted</label>
                            <input class="form-control" type="date" asp-for="DateAdmitted" />
                            <span asp-validation-for="DateAdmitted"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="YearToGraduate"></label>
                            <input class="form-control" type="date" asp-for="YearToGraduate" />
                            <span asp-validation-for="YearToGraduate"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="AmountRequested">Amount Req'ted</label>
                            <input class="form-control" type="text" asp-for="AmountRequested" />
                            <span asp-validation-for="AmountRequested"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="InstitutionType"></label>
                            <select asp-for="InstitutionType" required class="form-control">
                                <option value="1">University</option>
                                <option value="2">Polytechnic</option>
                                <option value="3">College</option>
                                <option value="4">Secondary</option>
                                <option value="5">Primary</option>
                                <option value="6">Artisan</option>
                            </select>
                            <span asp-validation-for="InstitutionType"></span>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="SchoolBill">School Bill</label>
                            <a href="/UploadedFiles/SchBill/@Model.SchoolBill" target="_blank">Open</a>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="LetterOfAdmission">Admission Letter</label>
                            <a href="/UploadedFiles/AdmissionLetter/@Model.LetterOfAdmission" target="_blank">Open</a>
                        </div>

                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="LastSchoolResult">Last School Result</label>
                            <a href="/UploadedFiles/SchResult/@Model.LastSchoolResult" target="_blank">Open</a>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="BankAccountNumber">Bank Account Number</label>
                            <input class="form-control" id="bankacct" onkeyup="checkLength(event)" type="text" asp-for="BankAccountNumber" maxlength="10" />
                            <span readonly asp-validation-for="BankAccountNumber"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label class="formlabel" readonly asp-for="BankAccountName">Bank Account Name</label>
                            <input class="form-control" type="text" asp-for="BankAccountName" />
                            <span asp-validation-for="BankAccountName"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="BankName">Bank Name</label>
                            <input class="form-control" type="text" asp-for="BankName" />
                            <span asp-validation-for="BankName"></span>
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <input type="submit" id="submitbtn" class="btn btn-success text-white formlabel" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script>
    function checkLength(event) {
        let bank = document.getElementById('bankacct');
        if (typeof bank.value != Number) {
            document.getElementById('err').innerHTML = "Bank account can't contain alphabets";
        }
        if (bank.value.length > 10) {
            document.getElementById('err').innerHTML = "Bank account can't be greater than 10";
            event.preventDefault();
        }

    }
</script>
