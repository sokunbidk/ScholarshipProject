@model ScholarshipManagement.Data.CreateCircuitRequestModel

@{
    ViewData["Title"] = "Circuit";
}

<div class="row">

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>

            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="alert alert-warning alert-dismissible" id="successUser" role="alert">@ViewBag.Message</p>
                }
                <form method="POST">

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="CircuitName"></label>
                            <input type="text" asp-for="CircuitName" class="form-control" />
                            <span asp-validation-for="CircuitName"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="PresidentId"></label>
                            <select asp-for="PresidentId" class="form-control" asp-items="ViewBag.presidentId">
                                <option selected>-- Select PresidentId --</option>
                            </select>
                            <span asp-validation-for="PresidentId"></span>
                        </div>


                    </div>

                    <div class="form-row">

                        <input type="submit" class="btn btn-success" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
