@model ScholarshipManagement.Data.CreateCircuitRequestModel

@{
    ViewData["Title"] = "Creat Circuit";
}

<div class="row">

    <div class="col-md-7">
        <div class="card">
            
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
                <a class="text-danger  text-lg-right font-weight-bold" asp-controller="Admin" asp-action="AdminDashboard">---Dashboard</a>
            </div>
            <div class="card card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p class="alert alert-warning alert-dismissible bg-danger text-white text-center" id="successUser" role="alert">@ViewBag.Message</p>
                }
                <form method="POST">

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label class="formlabel" for="mail">Email Address</label>
                            <input type="text" asp-for="Email" class="form-control" id="mail"/>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label for="Crt" class="formlabel">Circuit Name</label>
                            <input type="text" asp-for="CircuitName" class="form-control" id="crt"/>
                            <span asp-validation-for="CircuitName"></span>
                        </div>

                    </div>

                    <div class="form-row">

                        <input type="submit" class="btn btn-success" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
