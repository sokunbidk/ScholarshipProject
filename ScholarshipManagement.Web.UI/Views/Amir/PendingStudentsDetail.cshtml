@model ScholarshipManagement.Data.DTOs.StudentDto 
@{
    ViewData["Title"] = "Applicant Profile";
}

<div class="row justify-content-center mt-5">

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">@ViewData["Title"]</h4>
            </div>
            <div class="card card-body">
                <a class="text-danger  text-lg-right font-weight-bold" asp-controller="Amir" asp-action="PendingApplicationsFocus">---CLOSE</a>

                <a asp-action="PendingApplicationsDetail" asp-route-id="@Model.ApplicationId" class="btn btn-success">
                    View Application Details
                </a>

                <form method="GET">
                    <div class="form-row">

                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="MemberCode">Member Code</label>
                            <input type="text" asp-for="MemberCode" readonly class="form-control" />
                            <span asp-validation-for="MemberCode"></span>
                        </div>
                        <div style="width: 100px; height: 100px; overflow:hidden; margin-left:320px;">
                            <img src="/UploadedFiles/Photograph/@Model.Photograph" width="100" />
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="SurName">Sur Name</label>
                            <input type="text" asp-for="SurName" readonly class="form-control" />
                            <span asp-validation-for="SurName"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="FirstName">First Name</label>
                            <input type="text" asp-for="FirstName" readonly class="form-control" />
                            <span asp-validation-for="FirstName"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="OtherName">Other Name</label>
                            <input class="form-control" readonly type="text" asp-for="OtherName" />
                            <span asp-validation-for="OtherName"></span>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="form-group col-lg-6">
                            <label class="formlabel" asp-for="Address">Address</label>
                            <input class="form-control" readonly type="text" asp-for="Address" />
                            <span asp-validation-for="Address"></span>
                        </div>

                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="CircuitId">Circuit</label>
                            <select asp-for="CircuitId" class="form-control" asp-items="ViewBag.Circuits" readonly>
                                @*<option selected>-- Select Jamaat --</option>*@
                            </select>
                            <span asp-validation-for="CircuitId"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="JamaatId">Jamaat</label>
                            <select asp-for="JamaatId" class="form-control" asp-items="ViewBag.Jamaats" readonly>
                                @*<option selected>-- Select Jamaat --</option>*@
                            </select>
                            <span asp-validation-for="JamaatId"></span>
                        </div>

                    </div>
                    <div class="form-row">

                        <div class="form-group col-lg-4">
                            <label class="formlabel" asp-for="AuxiliaryBody">Auxiliary Body</label>
                            <input class="form-control" readonly type="text" asp-for="AuxiliaryBody" />
                            <span asp-validation-for="AuxiliaryBody"></span>
                        </div>
                        <div class="form-group col-lg-2">
                            <label class="formlabel" asp-for="Gender">Gender</label>
                            <input class="form-control" readonly type="text" asp-for="Gender" />
                            <span asp-validation-for="Gender"></span>
                        </div>

                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="DateOfBirth">Date Of Birth</label>
                            <input class="form-control" readonly type="text" asp-for="DateOfBirth" />
                            <span asp-validation-for="DateOfBirth"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="PhoneNumber">Phone No</label>
                            <input class="form-control" readonly type="text" asp-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="EmailAddress">Email Address</label>
                            <input class="form-control" readonly type="text" asp-for="EmailAddress" />
                            <span asp-validation-for="EmailAddress"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="GuardianFullName">Guardian Name</label>
                            <input class="form-control" readonly type="text" asp-for="GuardianFullName" />
                            <span asp-validation-for="GuardianFullName"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="GuardianPhoneNumber">Guardian Phone</label>
                            <input class="form-control" readonly type="text" asp-for="GuardianPhoneNumber" />
                            <span asp-validation-for="GuardianPhoneNumber"></span>
                        </div>

                        <div class="form-group col-lg-3">
                            <label class="formlabel" asp-for="GuardianMemberCode">Guardian Code</label>
                            <input class="form-control" readonly type="text" asp-for="GuardianMemberCode" />
                            <span asp-validation-for="GuardianMemberCode"></span>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
