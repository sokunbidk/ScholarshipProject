@model ScholarshipManagement.Data.UpdateApplicationRequestModel

@{

}
<div class="row">

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>

            <div class="card card-body">
                <form method="get">
                    <div class="form-group">
                        <label asp-for="StudentId"></label>
                        <input type="text" class="form-control" asp-for="StudentId" />
                        <span asp-validation-for="StudentId"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="SurName"></label>
                            <input type="text" asp-for="SurName" class="form-control" />
                            <span asp-validation-for="SurName"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="FirstName"></label>
                            <input type="text" asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="OtherName"></label>
                            <input class="form-control" type="text" asp-for="OtherName" />
                            <span asp-validation-for="OtherName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input class="form-control" type="text" asp-for="Address" />
                        <span asp-validation-for="Address"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="Jamaat"></label>
                            <input class="form-control" type="text" asp-for="Jamaat" />
                            <span asp-validation-for="Jamaat"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="Circuit"></label>
                            <input class="form-control" type="text" asp-for="Circuit" />
                            <span asp-validation-for="Circuit"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="AuxiliaryBody"></label>
                            <input class="form-control" type="text" asp-for="AuxiliaryBody" />
                            <span asp-validation-for="AuxiliaryBody"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="PhoneNumber"></label>
                            <input class="form-control" type="text" asp-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label asp-for="EmailAddress"></label>
                            <input class="form-control" type="text" asp-for="EmailAddress" />
                            <span asp-validation-for="EmailAddress"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="Gender"></label>
                            <input class="form-control" type="text" asp-for="Gender" />
                            <span asp-validation-for="Gender"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label asp-for="DateOfBirth"></label>
                            <input class="form-control" type="text" asp-for="DateOfBirth" />
                            <span asp-validation-for="DateOfBirth"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="GuardianFullname"></label>
                            <input class="form-control" type="text" asp-for="GuardianFullname" />
                            <span asp-validation-for="GuardianFullname"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label asp-for="GuardianPhone"></label>
                            <input class="form-control" type="text" asp-for="GuardianPhone" />
                            <span asp-validation-for="GuardianPhone"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Photograph"></label>
                        <input class="form-control" type="file" asp-for="Photograph" />
                        <span asp-validation-for="Photograph"></span>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="NameOfSchool"></label>
                            <input type="text" asp-for="NameOfSchool" class="form-control" />
                            <span asp-validation-for="NameOfSchool"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="AcademicLevel"></label>
                            <input type="text" asp-for="AcademicLevel" class="form-control" />
                            <span asp-validation-for="AcademicLevel"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="SchoolSession"></label>
                            <input class="form-control" type="text" asp-for="SchoolSession" />
                            <span asp-validation-for="SchoolSession"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Discipline"></label>
                        <input class="form-control" type="text" asp-for="Discipline" />
                        <span asp-validation-for="Discipline"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="Duration"></label>
                            <input class="form-control" type="text" asp-for="Duration" />
                            <span asp-validation-for="Duration"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="DegreeInView"></label>
                            <input class="form-control" type="text" asp-for="DegreeInView" />
                            <span asp-validation-for="DegreeInView"></span>
                        </div>

                        <div class="form-group col-lg-4">
                            <label asp-for="YearToGraduate"></label>
                            <input class="form-control" type="text" asp-for="YearToGraduate" />
                            <span asp-validation-for="YearToGraduate"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="LetterOfAdmission"></label>
                            <input class="form-control" type="text" asp-for="LetterOfAdmission" />
                            <span asp-validation-for="LetterOfAdmission"></span>
                        </div>

                        <div class="form-group col-lg-6">
                            <label asp-for="SchoolBill"></label>
                            <input class="form-control" type="text" asp-for="SchoolBill" />
                            <span asp-validation-for="SchoolBill"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label asp-for="AmountRequested"></label>
                            <input class="form-control" type="text" asp-for="AmountRequested" />
                            <span asp-validation-for="AmountRequested"></span>
                        </div>

                        
                    </div>

                

                    <div class="form-group">
                        <label asp-for="LastSchoolResult"></label>
                        <input class="form-control" type="file" asp-for="LastSchoolResult" />
                        <span asp-validation-for="LastSchoolResult"></span>
                    </div>
                    <input type="submit" class="btn btn-success" value="Continue" />
                </form>
            </div>
        </div>
    </div>

</div>
